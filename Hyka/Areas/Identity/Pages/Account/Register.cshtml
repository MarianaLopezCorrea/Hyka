@page
@model RegisterModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localize

<div class="col-sm-8 col-md-7 col-lg-5 col-xl-4 text-center mx-auto my-4 border rounded-3 p-4">
    <h1 class="text-center">@localize["reg"]</h1>
    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <h2>@localize["crea"]</h2>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-floating my-3">
            <input asp-for="Input.UserName" class="form-control" autocomplete="username" placeholder='@localize["us"]'
                aria-required="true" />
            <label asp-for="Input.UserName">@localize["us"]</label>
            <span asp-validation-for="Input.UserName" class="text-danger"></span>
        </div>

        <div class="form-floating my-3">
            <input asp-for="Input.Email" class="form-control" placeholder='@localize["em"]' autocomplete="email"
                aria-required="true" />
            <label asp-for="Input.Email">@localize["em"]</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class=" form-floating my-3">
            <input asp-for="Input.Password" class="form-control" placeholder='@localize["pass"]'
                autocomplete="new-password" aria-required="true" />
            <label asp-for="Input.Password">@localize["pass"]</label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="form-floating my-3">
            <input asp-for="Input.ConfirmPassword" class="form-control" placeholder='@localize["conpass"]'
                autocomplete="new-password" aria-required="true" />
            <label asp-for="Input.ConfirmPassword">@localize["conpass"]</label>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">@localize["regs"]</button>
    </form>

    <small>
        @localize["by"]
        <a asp-controller="Home" asp-action="Privacy"> @localize["terms"]</a> @localize["and"]
        <a asp-controller="Home" asp-action="Privacy"> @localize["priv"]</a>
    </small>
    <hr />
    <p>
        @localize["alre"] <a id="login" asp-area="Identity" asp-page="/Account/Login">@localize["login"]</a>
    </p>

</div>


@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
