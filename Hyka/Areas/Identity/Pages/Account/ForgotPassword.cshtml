@page
@model ForgotPasswordModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localiza
@{
    ViewData["Title"] = @localiza["forgotYourPassword"];
}

<h1>@localiza["forgotYourPassword"]</h1>
<h2>@localiza["enterEmail"]</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email" class="form-label">@localiza["email"]</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">@localiza["resetPassword"]</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
