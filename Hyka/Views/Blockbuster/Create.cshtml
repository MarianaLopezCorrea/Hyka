@model Blockbuster
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localize
<form method="post">

    <div class="border p-3 mt-4">

        <div classs="row pb-2">
            <h2 class="text-primary">
                @localize["createBlockbuster"]
            </h2>
        </div>

        <div class="mb-3">
            <label asp-for="Id">@localize["id"]</label>
            <input asp-for="Id" class="form-control" />
            <span asp-validation-for="Id" class="text-danger"> </span>
        </div>

        <div class="mb-3">
            <label asp-for="Names">@localize["name"]</label>
            <input asp-for="Names" class="form-control" />
            <span asp-validation-for="Names" class="text-danger"> </span>
        </div>

        <div class="mb-3">
            <label asp-for="Surnames">@localize["surname"]</label>
            <input asp-for="Surnames" class="form-control" />
            <span asp-validation-for="Surnames" class="text-danger"> </span>
        </div>

        <div class="mb-3">
            <label asp-for="Age">@localize["age"]</label>
            <input asp-for="Age" class="form-control" />
            <span asp-validation-for="Age" class="text-danger"> </span>
        </div>

        <div class="mb-3">
            <label asp-for="Gender">@localize["gender"]</label>
            <input asp-for="Gender" class="form-control" />
            <span asp-validation-for="Gender" class="text-danger"> </span>
        </div>

        <div class="mb-3">
            <label asp-for="Email">@localize["email"]</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"> </span>
        </div>

        <div class="mb-3">
            <label asp-for="Password">@localize["password"]</label>
            <input asp-for="Password" class="form-control" type="password" />
            <span asp-validation-for="Password" class="text-danger"> </span>
        </div>

        <button type="submit" class="btn btn-primary" style="width:150px">@localize["create"]</button>

        <a asp-controller="Blockbuster" asp-action="Index" class="btn btn-secondary" style="width:150px">@localize["viewList"]</a>
    </div>

</form>

@*Allows to validate form without recharge the pages -> Client side*@
@section Scripts{
@{
    <partial name="_ValidationScriptsPartial" />
}
}