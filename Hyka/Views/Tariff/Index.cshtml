@model IEnumerable<Tariff>

@{
    ViewData["Title"] = "Tarifas";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Tariff List</h2>
        </div>

        <div class="col-6 text-end">
            <a asp-controller="Tariff" asp-action="Create" class="btn btn-success btn-lg">
                Add new &nbsp; <i class="bi bi-plus-square-dotted"></i>
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped text-center">
        <thead>
            <tr class="table-primary">
                <th>Tariff Name</th>
                <th>Price</th>
                <th>Options</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var obj in Model)
            {
                <tr class="table-light">
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        @obj.Price
                    </td>
                    <td>
                        <div class="w-50 btn-group" role="group">
                            <a asp-controller="Tariff" asp-action="Edit" asp-route-id="@obj.Id"
                            class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <!-- Button trigger modal -->
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal"
                            data-bs-target="#exampleModal">
                                <i class="bi bi-trash-fill"></i>
                            </button>

                        </div>
                    </td>
                </tr>
                <!-- Modal -->
                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Delete tariff?</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Are you sure you want to delete this tariff? This action cannot be undone.
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <form method="post" asp-action="Delete">
                                    <a asp-controller="Tariff" asp-action="Delete" asp-route-id="@obj"
                                    class="btn btn-primary">Confirm
                                    </a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </tbody>
    </table>

</div>