@model IEnumerable<Tariff>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localiza
@{
    ViewData["Title"] = @localiza["tariffs"];
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">@localiza["tariffsList"]</h2>
        </div>
        @* <div class="col-6 text-end">
            <a asp-controller="Tariff" asp-action="Create" class="btn btn-success btn-lg">
                AÃ±adir nueva &nbsp; <i class="bi bi-plus-square-dotted"></i>
            </a>
        </div> *@
    </div>

</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr class="table-primary" style="text-align: center;">
            <th>@localiza["nameTariff"]</th>
            <th>@localiza["priceTariff"]</th>
            <th>@localiza["options"]</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var obj in Model)
        {
            <tr class="table-light">
                <td>
                    @obj.Name
                </td>
                <td>
                    @obj.Price
                </td>
                <td style="text-align: center;">
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Tariff" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>
                        </a>

                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
